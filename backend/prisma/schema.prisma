generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  plans     Plan[]
}

model Plan {
  id          String   @id @default(uuid()) // o Int, depende de c√≥mo lo definiste
  name        String
  image       String?
  type        PlanType
  createdAt   DateTime @default(now())
  userId      String // debe ser el mismo tipo que `User.id`
  user        User     @relation(fields: [userId], references: [id])
  weeks       Week[]
  isPublished Boolean  @default(false)
}

model Week {
  id     String @id @default(uuid())
  number Int
  planId String
  plan   Plan   @relation(fields: [planId], references: [id])
  days   Day[]
}

model Day {
  id       String    @id @default(uuid())
  name     String // Lunes, Martes, etc.
  weekId   String
  week     Week      @relation(fields: [weekId], references: [id])
  sections Section[]
}

model Section {
  id      String @id @default(uuid())
  title   String
  content String
  dayId   String
  day     Day    @relation(fields: [dayId], references: [id])
}

enum Role {
  COACH
  ATHLETE
}

enum PlanType {
  WEEKLY
  MONTHLY
  QUARTERLY
}
